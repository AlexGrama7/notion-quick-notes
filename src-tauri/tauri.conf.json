{
  "$schema": "https://tauri.studio/v1/api/config",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Notion Quick Notes",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true
      },
      "clipboard": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "Notion Quick Notes",
        "width": 450,
        "height": 350,
        "resizable": false,
        "center": true,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "visible": false,
        "label": "main"
      },
      {
        "title": "Notion Quick Notes - Settings",
        "width": 500,
        "height": 600,
        "resizable": true,
        "center": true,
        "visible": false,
        "label": "settings"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.notion-quick-notes.app"
    }
  }
}
